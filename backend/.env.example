# GeoCV Backend Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads
TEMP_DIR=temp

# Computer Vision Settings
CV_MAX_IMAGE_SIZE=1024
CV_PROCESSING_TIMEOUT=30
CV_CACHE_ENABLED=True

# Game Settings
GAME_CLEANUP_INTERVAL=300  # 5 minutes
GAME_MAX_AGE_MINUTES=30
DEFAULT_GAME_MODE=classic

# Google Maps API (for future integration)
# GOOGLE_MAPS_API_KEY=your_api_key_here

# Database (for future use)
# DATABASE_URL=sqlite:///geocv.db

# Redis (for caching, future use)
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
